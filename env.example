# ============================================
# Predictive Maintenance System - Environment Variables
# ============================================
# Copy this file to .env and customize as needed

# Database Configuration
POSTGRES_DB=predictive_maintenance
POSTGRES_USER=pmuser
POSTGRES_PASSWORD=pmpassword

# pgAdmin (optional tool)
PGADMIN_EMAIL=admin@pm.local
PGADMIN_PASSWORD=admin

# InfluxDB (if using infrastructure/docker-compose.yml)
INFLUXDB_USER=admin
INFLUXDB_PASSWORD=adminpassword
INFLUXDB_ORG=pm-org
INFLUXDB_BUCKET=sensor-data
INFLUXDB_TOKEN=pm-token-change-in-production

# MinIO (S3-compatible storage)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# Redis
REDIS_PASSWORD=redispassword

